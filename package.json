{
  "name": "@uscreen.de/fastify-app",
  "version": "0.7.2",
  "description": "Opinionated combination of base packages to bootstrap a fastify app",
  "main": "index.js",
  "repository": "git@gitlab.uscreen.net:uscreen/npm/fastify-app.git",
  "author": "Marcus Spiegel <spiegel@uscreen.de>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint '**/*.js' --fix",
    "test": "tap test/**/*.test.js",
    "test:cov": "tap --coverage-report=html test/**/*.test.js",
    "test:ci": "tap --coverage-report=text-summary test/**/*.test.js"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js}": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@uscreen.de/eslint-config-prettystandard-node": "^0.1.2",
    "hyperid": "^2.0.5",
    "lint-staged": "^10.4.0",
    "pino-pretty": "^4.3.0",
    "prettier": "^2.1.2",
    "should": "^13.2.3",
    "tap": "^14.10.8",
    "yorkie": "^2.0.0"
  },
  "dependencies": {
    "assign-deep": "^1.0.1",
    "env-schema": "^2.0.0",
    "fastify": "^3.6.0",
    "fastify-autoload": "^3.3.0",
    "fastify-helmet": "^5.0.3",
    "fastify-oas": "^3.0.8",
    "fastify-plugin": "^3.0.0",
    "fastify-sensible": "^3.0.1",
    "read-pkg-up": "^7.0.1",
    "under-pressure": "^5.2.0"
  }
}
