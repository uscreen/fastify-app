{
  "name": "@uscreen.de/fastify-app",
  "version": "0.2.0-1",
  "description": "Opinionated combination of base packages to bootstrap a fastify app",
  "main": "index.js",
  "bin": {
    "fastify-app": "./bin/cli.js"
  },
  "repository": "git@gitlab.uscreen.net:uscreen/npm/fastify-app.git",
  "author": "Marcus Spiegel <spiegel@uscreen.de>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint '**/*.js' --fix",
    "test": "tap test/**/*.test.js",
    "test:cov": "tap --coverage-report=html test/**/*.test.js",
    "test:ci": "tap --coverage-report=text-summary test/**/*.test.js",
    "postinstall": "./bin/cli.js"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js}": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-standard": "^13.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "lint-staged": "^9.2.1",
    "prettier": "^1.18.2",
    "should": "^13.2.3",
    "tap": "^14.6.1",
    "yorkie": "^2.0.0"
  },
  "dependencies": {
    "assign-deep": "^1.0.1",
    "commander": "^3.0.0",
    "env-schema": "^1.0.0",
    "fastify": "^2.7.1",
    "fastify-autoload": "^1.0.0",
    "fastify-helmet": "^3.0.1",
    "fastify-oas": "^2.3.1",
    "fastify-plugin": "^1.6.0",
    "fastify-sensible": "^2.1.1",
    "fs-extra": "^8.1.0",
    "inquirer": "^6.5.1",
    "pino-pretty": "^3.2.0",
    "read-pkg-up": "^6.0.0",
    "under-pressure": "^3.1.0",
    "write-pkg": "^4.0.0"
  }
}